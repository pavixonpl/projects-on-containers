@model Auth.API.Auth.ViewModels.LoginViewModel


    <div class="card card-container">
        <img id="profile-img" class="profile-img-card" src="~/img/Project-on-containers-logos.jpeg" />
        <p id="profile-name" class="profile-name-card"></p>
        <form asp-route="Login" class="form-signin">
            <span id="reauth-email" class="reauth-email"></span>
            <input type="hidden" asp-for="ReturnUrl" />
            <input asp-for="Username" class="form-control credentials-input" placeholder="Email" required autofocus>
            <input asp-for="Password" class="form-control credentials-input" placeholder="Password" required>

            @if (ViewContext.ModelState.IsValid == false)
            {
                <div class="alert alert-danger">
                    <div asp-validation-summary="All" class="danger"></div>
                </div>
            }

            <div id="remember" class="checkbox">
                <label>
                    <input asp-for="RememberMe" type="checkbox"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Log in</button>
        </form>
        <a href="#" class="forgot-password">
            Forgot password?
        </a>
    </div>

@section head
{
    <link href="~/css/auth.css" rel="stylesheet"/>
}